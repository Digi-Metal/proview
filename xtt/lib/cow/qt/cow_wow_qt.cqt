    *sts = WOW__SUCCESS;
  }
  delete print_data;
}

void CoWowQt::update_title(QWidget* w, int editmode)
{
  QString title = w->windowTitle();
  if (editmode) {
    if (!title.startsWith("*** ")) {
      w->setWindowTitle(title.prepend("*** "));
    }
  } else {
    if (title.startsWith("*** ")) {
      w->setWindowTitle(title.remove(0, 4));
    }
  }
}

